{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "semi": ["warn", "never"],
    "indent": ["warn", 2],
    "no-debugger": "warn"
  }
}